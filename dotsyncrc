# Location of your dotfiles in $HOME
DOTFILES=.dotfiles

# dotfiles to symlink
#
# srcfile:dstfile
# dstfile will be '.$srcfile' by default (with path removed)
#
[files]
# Uncomment examples below
dotsyncrc
#bin:bin
fonts/fontawesome-webfont.ttf:.fonts/fontawesome-webfont.ttf
i3/config:.i3/config
i3/startup.sh:.i3/startup.sh
i3/workspace-1.json:.i3/workspace-1.json
i3/workspace-2.json:.i3/workspace-2.json
i3/workspace-4.json:.i3/workspace-4.json
i3/workspace-5.json:.i3/workspace-5.json
i3/workspace-10.json:.i3/workspace-10.json
i3/xrandr.sh:.i3/xrandr.sh
i3status/i3status.conf
x/xinitrc
x/Xmodmap
x/xresources
zsh/zshrc
[endfiles]

